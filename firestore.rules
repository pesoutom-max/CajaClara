rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funci√≥n para verificar si el usuario es admin
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }

    match /users/{userId} {
      // 1. Usuarios solo pueden leer y escribir su propio documento base
      // 2. Administradores pueden leer todos los documentos base de usuarios
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
      allow write: if request.auth != null && request.auth.uid == userId;

      match /transactions/{transactionId} {
        // Usuarios solo pueden leer/escribir sus propias transacciones
        // Administradores NO pueden leer las transacciones de los usuarios
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
